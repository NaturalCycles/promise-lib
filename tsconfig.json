{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "es2018"],
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist/cjs",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },

  "exclude": ["dist", "scripts"]
}
